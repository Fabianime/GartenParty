server {
    listen       80;
    server_name  just-bedarf.de;
    access_log  /var/log/just-bedarf.de/nginx.access.log;
    error_log   /var/log/just-bedarf.de/nginx.error.log;

    root   /var/www/html;
    charset utf-8;

    location / {
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type' always;
      
        index  index.html index.htm;
        try_files $uri $uri/ /index.html;
    }
}